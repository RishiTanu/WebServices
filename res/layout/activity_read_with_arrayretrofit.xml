<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Retrofit.Readarray_retrofit">


    <TextView
        android:id="@+id/folname"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_200sdp"
        android:textSize="@dimen/_18sdp"
        android:layout_height="wrap_content"
        android:text="FolderName" />

    <TextView
        android:id="@+id/tolimg"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_18sdp"
        android:layout_height="wrap_content"
        android:text="TotalImage" />

    <TextView
        android:id="@+id/selimg"
        android:textSize="@dimen/_18sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_200sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SelectedImage" />
</RelativeLayout>